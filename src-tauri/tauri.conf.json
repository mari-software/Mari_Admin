{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mari-admin",
  "version": "0.1.1",
  "identifier": "software.mari.mari-admin",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Mari Admin",
        "width": 1400,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "center": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "basicUi"
      },
      "endpoints": [
        "https://mari.software"
      ],
